{
  "manifest_version": 3,
  "name": "Archon - Focus Timer",
  "version": "1.0.0",
  "description": "Floating Pomodoro timer with mood-based music, custom duration, and desktop widget",
  "permissions": [
    "identity",
    "storage",
    "activeTab",
    "tabs",
    "scripting",
    "webNavigation"
  ],
  "host_permissions": [
    "https://accounts.spotify.com/*",
    "https://api.spotify.com/*",
    "https://481606634176.ngrok-free.app/*",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["chart.js", "content-script.js"],
      "css": ["content-styles.css"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "content-script.js",
        "content-styles.css",
        "flow-service.js",
        "chart.js",
        "icon.svg"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "oauth2": {
    "client_id": "5eb5fd2d8bb14edb8cc7f632cbe718a1",
    "scopes": [
      "user-read-private",
      "user-read-email",
      "user-modify-playback-state",
      "user-read-playback-state",
      "user-read-currently-playing",
      "streaming",
      "playlist-read-private",
      "playlist-read-collaborative"
    ]
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Archon - Focus Timer"
  },
  "icons": {
    "16": "icon.svg",
    "48": "icon.svg",
    "128": "icon.svg"
  }
}